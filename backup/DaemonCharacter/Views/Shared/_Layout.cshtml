<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="~/Content/bootstrap.min.css" rel="stylesheet">

    <!-- SmartMenus jQuery Bootstrap Addon CSS -->
    <link href="~/Content/jquery.smartmenus.bootstrap.css" rel="stylesheet">
    <link href="~/Content/owl/owl.carousel.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/owl/owl.theme.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/owl/owl.transitions.css" rel="stylesheet" type="text/css" />


    <!-- Custom CSS -->
    @*<link href="~/Content/1-col-portfolio.css" rel="stylesheet">*@
    <link href='https://fonts.googleapis.com/css?family=Ubuntu:300,400,700' rel='stylesheet'
          type='text/css'>
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400italic,700italic,400,700"
          rel="stylesheet" type="text/css" />


    <!-- Required plugin - Animate.css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.4.0/animate.min.css">

    <link href="~/fonts/font-awesome.min.css" rel="stylesheet" type="text/css" />


    <title>@ViewBag.Title - PLANET RPG</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    <meta name="viewport" content="width=device-width" />

    @Styles.Render("~/Content/css")

    @*@RenderSection("FirstScripts", required: false)*@

</head>
<body>

    @Html.Partial("_Menu")

    <div id="body" class="container-fluid">
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>

    <footer id="fh5co-footer" class="padding50">

        <div class="fh5co-footer-content">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 col-sm-4 col-md-push-3 animated wow fadeInLeft" data-wow-delay="0.2s">
                        <h3 class="fh5co-lead">About</h3>
                        <ul>
                            <li><a href="#">Tour</a></li>
                            <li><a href="#">Company</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3 col-sm-4 col-md-push-3 animated wow fadeInLeft" data-wow-delay="0.4s">
                        <h3 class="fh5co-lead">Support</h3>
                        <ul>
                            <li><a href="#">Help Center</a></li>
                            <li><a href="#">Terms of Service</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3 col-sm-4 col-md-push-3 animated wow fadeInLeft" data-wow-delay="0.6s">
                        <h3 class="fh5co-lead">More Links</h3>
                        <ul>
                            <li><a href="#">Feedback</a></li>
                            <li><a href="#">Frequently Ask Questions</a></li>
                            <li><a href="#">Terms of Service</a></li>
                        </ul>
                    </div>

                    <div class="col-md-3 col-sm-12 col-md-pull-9 animated wow fadeInLeft" data-wow-delay="0.8s">
                        <div class="fh5co-footer-logo"><a href="javascript:void(0);"><i class="fa fa-logo"></i>PLANET RPG</a></div>
                        <p class="fh5co-copyright"><small>&copy; 2016. All Rights Reserved.</small></p>
                        <p class="fh5co-social-icons">
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-instagram"></i></a>
                            <a href="#"><i class="fa fa-dribbble"></i></a>
                            <a href="#"><i class="fa fa-youtube"></i></a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")


    <!-- jQuery -->
    <script src="~/Scripts/jquery.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/wow.min.js" type="text/javascript"></script>
    @*<script src="~/Scripts/tutorial.js"></script>*@
    <script src="~/Content/owl/owl.carousel.js" type="text/javascript"></script>
    <!-- SmartMenus jQuery plugin -->
    <script type="text/javascript" src="~/Scripts/jquery.smartmenus.js"></script>
    <!-- SmartMenus jQuery Bootstrap Addon -->
    <script type="text/javascript" src="~/Scripts/jquery.smartmenus.bootstrap.js"></script>
    @*<script src="~/Scripts/contact.js" type="text/javascript"></script>*@

    @RenderSection("scripts", required: false)
</body>
</html>