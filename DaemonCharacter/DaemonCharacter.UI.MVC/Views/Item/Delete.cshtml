@model DaemonCharacter.Application.ViewModels.Item.ItemViewModel

@{
    ViewBag.Title = "Remove Item";
}


@section CustomStyle {
    @Styles.Render("~/bundles/Sprite/Acoes")
}

<section id="slider" class="fullheight page-item">
    <div class="form-horizontal">
        <h3 class="animated wow fadeInUp" data-wow-delay="0.2s">
            <i class="sprite sprite-Delete-Item animated wow fadeInDown div-icon"></i>
            &nbsp;Remove @Html.Raw(Model.ItemName)
        </h3>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ItemName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ItemName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ItemEffect)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ItemEffect)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ItemPrice)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ItemPrice)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UniqueUse)
            </dt>

            <dd>
                <label class="switch switch-info" id="UniqueUse" disabled="disabled">
                    @if (Model.UniqueUse)
                    {
                        <input type="checkbox" checked="checked" disabled="disabled">
                    }
                    else
                    {
                        <input type="checkbox" disabled="disabled">
                    }
                    <span class="switch-label" data-on="YES" data-off="NO" disabled="disabled"></span>
                </label>
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <a href="~/Item" title="List">
                    <span class="sprite sprite-List-Item animated wow fadeInDown div-icon"></span>
                    &nbsp;<span>List</span>
                </a> |
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        }
    </div>
</section>