@model IEnumerable<DaemonCharacter.Application.ViewModels.NonPlayer.NonPlayerViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CharacterName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CharacterMaxLife)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NonPlayerChalengeLevel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NonPlayerType)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CharacterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CharacterMaxLife)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NonPlayerChalengeLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NonPlayerType)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CharacterId }) |
                @Html.ActionLink("Details", "Details", new { id = item.CharacterId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CharacterId })
            </td>
        </tr>
    }

</table>
