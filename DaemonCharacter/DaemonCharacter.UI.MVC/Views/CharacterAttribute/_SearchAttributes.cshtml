@model List<DaemonCharacter.Application.ViewModels.Attribute.AttributeViewModel>

<div class="col-md-12">
    @if (Model.FirstOrDefault().AttributeType != AttributeType.Talent)
    {
        <table class="table table-bordered" id="TableSearch">
            <thead>
                <tr>
                    <th>Attribute</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="clickable-row" style="cursor:pointer" id="@Html.Raw(item.AttributeId)">
                        <td>@Html.DisplayFor(m => item.AttributeName)</td>
                        <td>@Html.DisplayFor(m => item.AttributeDescription)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <table class="table table-bordered" id="TableTalents">
            <thead>
                <tr>
                    <th>Talent</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="clickable-row" style="cursor:pointer" id="@Html.Raw(item.AttributeId)">
                        <td>@Html.DisplayFor(m => item.AttributeName)</td>
                        <td>@Html.DisplayFor(m => item.AttributeDescription)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>