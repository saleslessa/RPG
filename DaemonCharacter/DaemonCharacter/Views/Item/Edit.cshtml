@model DaemonCharacter.Models.ItemModel

@{
    ViewBag.Title = "Edit Item";
}

<h2>Edit item</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        @Html.HiddenFor(model => model.id)

        <div class="editor-label">
            @Html.LabelFor(model => model.name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.name)
            @Html.ValidationMessageFor(model => model.name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.effect)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.effect)
            @Html.ValidationMessageFor(model => model.effect)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.category)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.category)
            @Html.ValidationMessageFor(model => model.category)
        </div>

        <div class="editor-label">
            <input type="button" value="Add Attribute" id="AddAttributeButton" class="button" />&nbsp;
            <input type="button" value="Remove all" id="RemoveAllAttributeButton" class="button" />
        </div>
        <div class="editor-field" id="ItemAttributeContainer">
            @{Html.RenderAction("ListItemAttribute", "ItemAttribute", new { idItem = Model.id });}
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script type="text/javascript" src="@Url.Content("~/Scripts/ItemForm.js")"></script>